// write a program to find the sum of square of n natural numbers:
	int no,sum=0;
	cout<<"Enter a number:";
	cin>>no;
	while(no>=1)
	{
		//cout<<"the square of "<<no<<" is:"<<square(no)<<"\n";
		sum=sum+square(no);
		no--;
	}
	cout<<"The sum of the square of n number:"<<sum;
	return 0;
}
int square(int a)
{
	return a*a;
}


